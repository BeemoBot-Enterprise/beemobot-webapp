---
import TeemoBreakout from "../components/TeemoBreakout";
import MainLayout from "../layouts/main-layout.astro";
---

<MainLayout title="Teemo Brick Breaker">
  <div class="relative min-h-screen overflow-hidden">
    <!-- Decorative elements -->
    <div
      class="absolute -top-20 -right-20 w-64 h-64 bg-purple-500/10 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute top-1/3 -left-32 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-20 right-10 w-80 h-80 bg-yellow-500/10 rounded-full blur-3xl"
    >
    </div>

    <div class="container mx-auto px-4 py-12 relative z-10">
      <div class="text-center mb-8">
        <h1
          class="text-4xl md:text-5xl font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-yellow-400 via-blue-400 to-purple-500"
        >
          Teemo Brick Breaker
        </h1>
        <p class="text-xl text-gray-300 max-w-2xl mx-auto">
          Break bricks and collect power-ups in this Teemo-themed game!
        </p>
      </div>

      <div
        class="glassmorphism rounded-2xl overflow-hidden shadow-xl mb-12 border border-white/10 p-6"
      >
        <TeemoBreakout client:load />
      </div>
    </div>
  </div>
</MainLayout>

<style>
  .glassmorphism {
    background: rgba(30, 33, 48, 0.6);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
  }
</style>
